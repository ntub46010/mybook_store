<h1>書籍列表</h1>

<%= link_to "新增書籍", new_book_path %>

<table>
  <thead>
    <tr>
      <td>書名</td>
      <td>簡介</td>
      <td>作者</td>
      <td>價錢</td>
      <td>操作</td>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to "編輯", edit_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>